<%- contentFor('title') %> Shop | Funkoshop 

<%- contentFor('body') %> 
<main class="shop-main container"><!-- Inicio Main -->
  <aside class="shop-main__aside"><!-- Inicio Aside -->
    <section class="shop-main__section">
      <form class="shop-main__section" autocomplete="off">
        <div class="shop-main__div">
          <h4 class="shop-main__label">Buscar</h4>
          <input class="shop-main__input" type="text" name="buscar" placeholder="item o categoria" />
          <!--para que al hacer click en el label vaya al input agregar id con mismo nombre que for-->
        </div>
        <div class="shop-main__div">
            <h4 class="shop-main__label">Ordenar por</h4>
            <select class="shop-main__input" name="ordenar" id="">
              <option value="mayor">Mayor a menor</option>
              <option value="menor">Menor a mayor</option>
            </select>
        </div>
        <div class="shop-main__div">
          <h4 class="shop-main__label">Precio</h4>
          <div class="shop-main__min-max">
              <span class="shop-main__mm">Min</span>
              <input class="shop-main__mm-input" type="text" name="" id="" placeholder="0" />
              <span class="shop-main__mm"> - </span>
              <span class="shop-main__mm">Max</span>
              <input class="shop-main__mm-input" type="text" name="" id="" placeholder="0" />
          </div>
        </div>
        <div >
            <h4 class="shop-main__label">Filtrar</h4>
            <div class="shop-main__check-conteiner">
              <input class="shop-main__checkbox" type="checkbox" name="nuevos" id="nuevos" value="nuevos" />
              <!--para que al hacer click en el label vaya al input agregar id con mismo nombre que for-->
              <label class="shop-main__check-label" for="nuevos">NUEVOS</label>
            </div>
            <div class="shop-main__check-conteiner">
              <input class="shop-main__checkbox" type="checkbox" name="ofertas" id="ofertas" value="ofertas" />
              <label class="shop-main__check-label" for="ofertas">OFERTAS</label>
            </div>
            <div class="shop-main__check-conteiner">
              <input class="shop-main__checkbox" type="checkbox" name="edicionEspecial" id="edicionEspecial" value="edicionEspecial" />
              <label class="shop-main__check-label" for="edicionEspecial">EDICIÃ“N ESPECIAL</label>
            </div>
            <div class="shop-main__check-conteiner">
              <input class="shop-main__checkbox" type="checkbox" name="edicionEspecial" id="edicionEspecial" value="favoritos" />
              <label class="shop-main__check-label" for="edicionEspecial">FAVORITOS</label>
            </div>
        </div>
      </form>
    </section>
  </aside><!-- Fin Aside -->
  <section class="shop-main__products">
    <% getItems.forEach(item => {  %>
      <%- include('../partials/item', { item }) %>
    <% }) %>
  
    <section class="shop-pagination">        
      <ul class="shop-pagination__container">
        <li class="shop-pagination__link disabled"> <a href="#"> < </a> </li>
        <li class="shop-pagination__link selected"> <a href="#">1</a> </li>
        <li class="shop-pagination__link"> <a href="#">2</a> </li>
        <li class="shop-pagination__link"> <a href="#">...</a> </li>
        <li class="shop-pagination__link"> <a href="#">9</a> </li>
        <li class="shop-pagination__link"> <a href="#">10</a> </li>
        <li class="shop-pagination__link active"> <a href="#"> > </a> </li>
      </ul>
    </section>
  </section>
</main><!-- Fin Main -->